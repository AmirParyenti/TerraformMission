pipeline {
    agent any
    stages {
        stage('Test SSH Connection') {
            steps {
                script {
                    withCredentials([sshUserPrivateKey(credentialsId: 'ec2-user', keyFileVariable: 'SSH_KEY')]) {
                        sshagent(['ec2-user']) {
                            sh "ssh -o StrictHostKeyChecking=no ec2-user@3.147.103.73 'echo Connection successful'"
                        }
                    }
                }
            }
        }
    }
}
